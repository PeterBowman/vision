<application>
    <name>example switchDetection2D App</name>

    <!-- Expect instance from visionFakeSensors.xml or visionSensors.xml -->
    <!--module>
        <name>yarpdev</name>
        <parameters>--device opencv_grabber</parameters>
        <node>localhost</node>
    </module-->

    <module>
        <name>switchDetection2D</name>
        <parameters>--detector ColorRegion --algorithm redMinusGreen</parameters>
        <node>localhost</node>
    </module>
    <!-- connection is performed automatically -->

    <module>
        <name>yarpview</name>
        <parameters>--name /switchDetection2D/yarpview/img:i</parameters>
        <node>localhost</node>
    </module>

    <connection>
        <from>/switchDetection2D/img:o</from>
        <to>/switchDetection2D/yarpview/img:i</to>
    </connection>
</application>
