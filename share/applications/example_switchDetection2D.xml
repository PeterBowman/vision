<application>
    <name>example switchDetection2D App</name>

    <!-- Expect instance that opens /grabber from visionFakeSensors.xml or visionSensors.xml -->

    <module>
        <name>switchDetection2D</name>
        <parameters>--detector ColorRegionDetector --algorithm greenMinusRed</parameters>
        <node>localhost</node>
    </module>
    <!-- connection is performed automatically -->

    <module>
        <name>yarpview</name>
        <parameters>--name /switchDetection2D/yarpview/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/switchDetection2D/grabber/img:o</from>
        <to>/switchDetection2D/yarpview/img:i</to>
    </connection>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp read ... /switchDetection2D/grabber/state:o"</parameters>
        <node>localhost</node>
    </module>
</application>
