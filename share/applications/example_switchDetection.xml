<application>
    <name>example switchDetection App</name>

    <!-- Expect instance that opens /rgbd from visionFakeSensors.xml or visionSensors.xml -->

    <module>
        <name>switchDetection</name>
        <parameters>--detector ColorRegionDetector --algorithm redMinusGreen</parameters>
        <node>localhost</node>
    </module>
    <!-- connection is performed automatically -->

    <module>
        <name>yarpview</name>
        <parameters>--name /switchDetection/yarpview/img:i</parameters>
        <node>localhost</node>
    </module>
    <connection>
        <from>/switchDetection/rgbd/img:o</from>
        <to>/switchDetection/yarpview/img:i</to>
    </connection>

    <module>
        <name>gnome-terminal</name>
        <parameters>-e "yarp read ... /switchDetection/rgbd/state:o"</parameters>
        <node>localhost</node>
    </module>
</application>
